<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_setting" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_control_setting">

        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:src="@drawable/ic_lockapp"
            app:layout_constraintBottom_toBottomOf="@id/tv1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv1" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/inter_regular_400"
            android:text="Để bảo vệ quyền riêng tư của bạn hãy tạo mật khẩu cho ứng dụng nhé!"
            android:textColor="#8C8C8C"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_notification"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/inter_medium_500"
        android:text="Nhập mật khẩu"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/passcode1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_radio_button_unchecked"
            android:layout_marginHorizontal="2dp"/>

        <ImageView
            android:id="@+id/passcode2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_radio_button_unchecked"
            android:layout_marginHorizontal="2dp"/>

        <ImageView
            android:id="@+id/passcode3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_radio_button_unchecked"
            android:layout_marginHorizontal="2dp"/>

        <ImageView
            android:id="@+id/passcode4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_radio_button_unchecked"
            android:layout_marginHorizontal="2dp"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/number1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/inter_bold_700"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/number4"
            app:layout_constraintEnd_toStartOf="@+id/number2"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/number2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/inter_bold_700"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/number3"
            app:layout_constraintStart_toEndOf="@+id/number1"
            app:layout_constraintTop_toTopOf="@+id/number1" />

        <TextView
            android:id="@+id/number3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/inter_bold_700"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/number2"
            app:layout_constraintTop_toTopOf="@+id/number1" />

        <TextView
            android:id="@+id/number4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/inter_bold_700"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/number7"
            app:layout_constraintEnd_toStartOf="@+id/number5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number1" />

        <TextView
            android:id="@+id/number5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/inter_bold_700"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/number6"
            app:layout_constraintStart_toEndOf="@+id/number4"
            app:layout_constraintTop_toTopOf="@+id/number4" />

        <TextView
            android:id="@+id/number6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/inter_bold_700"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/number5"
            app:layout_constraintTop_toTopOf="@+id/number4" />

        <TextView
            android:id="@+id/number7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/inter_bold_700"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/number0"
            app:layout_constraintEnd_toStartOf="@+id/number8"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number4" />

        <TextView
            android:id="@+id/number8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/inter_bold_700"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/number9"
            app:layout_constraintStart_toEndOf="@+id/number7"
            app:layout_constraintTop_toTopOf="@+id/number7" />

        <TextView
            android:id="@+id/number9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/inter_bold_700"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/number8"
            app:layout_constraintTop_toTopOf="@+id/number7" />

        <TextView
            android:id="@+id/number0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:fontFamily="@font/inter_bold_700"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number7" />

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="20dp"
            android:src="@drawable/ic_baseline_backspace_24"
            app:layout_constraintStart_toStartOf="@+id/number9"
            app:layout_constraintTop_toTopOf="@+id/number0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>