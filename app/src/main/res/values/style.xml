<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog_transparent_width" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="MyEdittext" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_bold_700</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewLoop" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomDatePicker" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_extra_bold_800</item>
        <!--        <item name="colorControlNormal">@color/transparent</item>-->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/aqua</item>
    </style>
</resources>